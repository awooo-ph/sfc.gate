        <Grid.Effect>
            <BlurEffect Radius="{Binding Source={x:Static vm:MainViewModel.Instance},Path=CurrentUser.SmsAccess,Converter={converters:BooleanToObject 0, 7},FallbackValue=10}" 
                        KernelType="Gaussian" RenderingBias="Performance"/>
            </Grid.Effect>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>

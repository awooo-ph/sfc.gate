<UserControl x:Class="SFC.Gate.Views.Users"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SFC.Gate.Views"
             xmlns:cnv="clr-namespace:SFC.Gate.Converters"
             mc:Ignorable="d" 
             xmlns:vm="clr-namespace:SFC.Gate.ViewModels"
             DataContext="{Binding Source={x:Static vm:Users.Instance}}"
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
    
    <Grid Margin="10"
          IsEnabled="{Binding Source={x:Static vm:MainViewModel.Instance},Path=CurrentUser.IsAdmin}">
        <Grid.Effect>
            <BlurEffect Radius="{Binding Source={x:Static vm:MainViewModel.Instance},Path=CurrentUser.IsAdmin,Converter={cnv:BooleanToObject 0, 7},FallbackValue=10}" 
                        KernelType="Gaussian" RenderingBias="Performance"/>
            </Grid.Effect>
          <Grid.ColumnDefinitions>
              <ColumnDefinition Width="*"/>
              <ColumnDefinition Width="2*"/>
          </Grid.ColumnDefinitions>
        <ListBox Margin="4" ItemsSource="{Binding Items}"
                 SelectedItem="{Binding SelectedUser}"/>
        <Grid Grid.Column="1" >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Label Content="Username" Grid.Column="0" Grid.Row="0" Margin="4"/>
            <TextBox Text="{Binding Username}" Grid.Column="1" Grid.Row="0" Margin="4"
                     IsEnabled="{Binding SelectedUser,Converter={cnv:IsNullConverter Invert=True}}"/>

            <Label Content="Current Password" Grid.Column="0" Grid.Row="1" Margin="4"/>
            <TextBox Text="{Binding CurrentPassword}" Grid.Column="1" Grid.Row="1" Margin="4"
                     IsEnabled="{Binding HasPassword}"/>

            <Label Content="New Password" Grid.Column="0" Grid.Row="2" Margin="4"/>
            <TextBox Text="{Binding NewPassword}" Grid.Column="1" Grid.Row="2" Margin="4"
                     IsEnabled="{Binding SelectedUser,Converter={cnv:IsNullConverter Invert=True}}"/>

            <Label Content="Retype Password" Grid.Column="0" Grid.Row="3" Margin="4"/>
            <TextBox Text="{Binding NewPassword2}" Grid.Column="1" Grid.Row="3" Margin="4"
                     IsEnabled="{Binding SelectedUser,Converter={cnv:IsNullConverter Invert=True}}"/>

            <GroupBox Header="User Privileges" Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="2"
                      Margin="4,10,4,4">
                <UniformGrid>
                    <CheckBox Content="Administrator" Margin="4" IsChecked="{Binding IsAdmin}"/>
                    <CheckBox Content="Access Students" Margin="4" IsChecked="{Binding SelectedUser.StudentsAccess}"/>
                    <CheckBox Content="Add Visitors" Margin="4" IsChecked="{Binding SelectedUser.VisitorsAccess}"/>
                    <CheckBox Content="Access Violations" Margin="4" IsChecked="{Binding SelectedUser.ViolationsAccess}"/>
                    <CheckBox Content="Send SMS" Margin="4" IsChecked="{Binding SelectedUser.SmsAccess}"/>
                    
                </UniformGrid>
            </GroupBox>

            <UniformGrid Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="5" Columns="4"
                         VerticalAlignment="Bottom">
                <Button Content="Add New" Margin="4" Command="{Binding AddUserCommand}"/>
                <Rectangle/>
                <Button Content="{Binding DeleteCancel}" Margin="4" Command="{Binding DeleteCommand}"
                        IsEnabled="{Binding SelectedUser,Converter={cnv:IsNullConverter Invert=True}}"/>
                <Button Content="Save" Margin="4" Command="{Binding SaveCommand}"
                        IsEnabled="{Binding SelectedUser,Converter={cnv:IsNullConverter Invert=True}}"/>
            </UniformGrid>
        </Grid>
    </Grid>
        <Border CornerRadius="4" HorizontalAlignment="Center"
                Visibility="{Binding Source={x:Static vm:MainViewModel.Instance},Path=CurrentUser.SmsAccess,Converter={cnv:BooleanToVisibility Collapsed,Visible}}"
                Background="#FF0000"
                VerticalAlignment="Center">
            <StackPanel Orientation="Horizontal"
                        Margin="20">
                <Path Margin="4"
                      Data="M15.396557,23.044006C14.220558,23.044006 13.268559,23.886993 13.268559,24.927994 13.268559,25.975006 14.220558,26.817001 15.396557,26.817001 16.572557,26.817001 17.523547,25.975006 17.523547,24.927994 17.523547,23.886993 16.572557,23.044006 15.396557,23.044006z M15.467541,5.1819992C15.447552,5.1819992 15.436566,5.1829987 15.436566,5.1829987 13.118533,5.5049973 13.055545,7.3330002 13.055545,7.3330002L13.055545,9.2929993 13.626531,16.539001C13.983558,18.357002 14.243538,19.020004 14.243538,19.020004 15.275555,19.975006 16.203567,19.25 16.203567,19.25 16.976548,18.565994 17.028552,16.962997 17.028552,16.962997 17.956563,9.2929993 17.696553,7.1029968 17.696553,7.1029968 17.608571,5.2839966 15.823561,5.1849976 15.490551,5.1819992 15.481549,5.1819992 15.473553,5.1819992 15.467541,5.1819992z M15.56355,0C15.56355,0 21.710574,4.1259995 31.581613,2.8030014 31.581613,2.8030014 33.634629,26.556992 15.56355,32 15.56355,32 -0.10249132,27.548004 0.00050565118,2.9670029 0.0005058694,2.9670029 10.72555,3.6309967 15.56355,0z" Stretch="Uniform" Fill="#FFFFFFFF"
                      RenderTransformOrigin="0.5,0.5"/>
                <TextBlock Text="ACCESS DENIED" Foreground="White"
                           Margin="4"
                           FontWeight="Bold" FontSize="14pt"/>
            </StackPanel>

        </Border>
    </Grid>
</UserControl>

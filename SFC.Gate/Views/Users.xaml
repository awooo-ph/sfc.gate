<UserControl x:Class="SFC.Gate.Views.Users"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SFC.Gate.Views"
             xmlns:cnv="clr-namespace:SFC.Gate.Converters"
             mc:Ignorable="d" 
             xmlns:vm="clr-namespace:SFC.Gate.ViewModels"
             DataContext="{Binding Source={x:Static vm:Users.Instance}}"
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid Margin="10">
          <Grid.ColumnDefinitions>
              <ColumnDefinition Width="*"/>
              <ColumnDefinition Width="2*"/>
          </Grid.ColumnDefinitions>
        <ListBox Margin="4" ItemsSource="{Binding Items}"
                 SelectedItem="{Binding SelectedUser}"/>
        <Grid Grid.Column="1" >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Label Content="Username" Grid.Column="0" Grid.Row="0" Margin="4"/>
            <TextBox Text="{Binding Username}" Grid.Column="1" Grid.Row="0" Margin="4"
                     IsEnabled="{Binding SelectedUser,Converter={cnv:IsNullConverter Invert=True}}"/>

            <Label Content="Current Password" Grid.Column="0" Grid.Row="1" Margin="4"/>
            <TextBox Text="{Binding CurrentPassword}" Grid.Column="1" Grid.Row="1" Margin="4"
                     IsEnabled="{Binding HasPassword}"/>

            <Label Content="New Password" Grid.Column="0" Grid.Row="2" Margin="4"/>
            <TextBox Text="{Binding NewPassword}" Grid.Column="1" Grid.Row="2" Margin="4"
                     IsEnabled="{Binding SelectedUser,Converter={cnv:IsNullConverter Invert=True}}"/>

            <Label Content="Retype Password" Grid.Column="0" Grid.Row="3" Margin="4"/>
            <TextBox Text="{Binding NewPassword2}" Grid.Column="1" Grid.Row="3" Margin="4"
                     IsEnabled="{Binding SelectedUser,Converter={cnv:IsNullConverter Invert=True}}"/>

            <GroupBox Header="User Privileges" Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="2"
                      Margin="4,10,4,4">
                <UniformGrid>
                    <CheckBox Content="Administrator" Margin="4" IsChecked="{Binding IsAdmin}"/>
                    <CheckBox Content="Access Students" Margin="4" IsChecked="{Binding SelectedUser.StudentsAccess}"/>
                    <CheckBox Content="Add Visitors" Margin="4" IsChecked="{Binding SelectedUser.VisitorsAccess}"/>
                    <CheckBox Content="Access Violations" Margin="4" IsChecked="{Binding SelectedUser.ViolationsAccess}"/>
                    <CheckBox Content="Send SMS" Margin="4" IsChecked="{Binding SelectedUser.SmsAccess}"/>
                    
                </UniformGrid>
            </GroupBox>

            <UniformGrid Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="5" Columns="4"
                         VerticalAlignment="Bottom">
                <Button Content="Add New" Margin="4" Command="{Binding AddUserCommand}"/>
                <Rectangle/>
                <Button Content="{Binding DeleteCancel}" Margin="4" Command="{Binding DeleteCommand}"
                        IsEnabled="{Binding SelectedUser,Converter={cnv:IsNullConverter Invert=True}}"/>
                <Button Content="Save" Margin="4" Command="{Binding SaveCommand}"
                        IsEnabled="{Binding SelectedUser,Converter={cnv:IsNullConverter Invert=True}}"/>
            </UniformGrid>
        </Grid>
    </Grid>
</UserControl>
